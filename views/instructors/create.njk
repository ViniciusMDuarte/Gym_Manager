{% extends 'layout.njk' %}


{% block content %}

    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/9419482/500x500) no-repeat center center / cover">

        </section>

        <section class="details">
            <h3>Novo Instrutor</h3>

            <div class="item">

                <div>Avatar URL</div>
                    <input type="url"
                           name="avatar_url"
                           placeholder="http://"
                           required>
            </div>

            <div class="item">
                <div>Instrutor</div>
                    <input type="text"
                           name="name"
                            placeholder="Nome do Instrutor"
                           
                           >
            </div>

            <div class="item">
                <div>Sexo</div>
                    <div>
                        <span> <input type="radio" name="gender" value="M" checked>Masculino</span>
                        <span> <input type="radio" name="gender" value="F">Feminino</span>
                
                    </div>

            <div class="item">
                <div>Data da Nascimento</div>
                <input type="date"
                        name="birth"
                        
                        >
            </div>

             <div class="item">
                <div>Grau de Escolaridade</div>
                <div>
                    <select name="scholling">
                        <option value="" selected>Escolha uma opção</option> 
                        <option value="Ensino Médio Completo" name="scholling">Ensino Médio Completo</option> 
                        <option value="Ensino Superior Completo" name="scholling">Ensino Superior Completo</option>
                        <option value="Mestrado" name="scholling">Mestrado</option>
                        <option value="Doutorado" name="scholling">Doutorado</option>

                    </select>

                </div>
              
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <input type="text"
                        name="type_class"
                         placeholder="Presencial / A distância"
                        >
            </div>


            <div class="item">
                <div>Area de Atuação</div>
                <div>
                   <input type="text"
                          name="services"
                          placeholder="Separe os serviços prestados por vírgula"
                          >
                </div>
                    
            </div>
        <button type="submit">Salvar</button>
      
        </section>

    </form>

{% endblock %}

